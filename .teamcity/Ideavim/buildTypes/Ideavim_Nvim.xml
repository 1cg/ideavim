<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>Tests with nvim</name>
  <description>Running tests with nvim integration</description>
  <settings>
    <options>
      <option name="branchFilter" value="+:&lt;default&gt;" />
      <option name="checkoutMode" value="AUTO" />
    </options>
    <parameters>
      <param name="env.ORG_GRADLE_PROJECT_downloadIdeaSources" value="false" />
      <param name="env.ORG_GRADLE_PROJECT_ideaVersion" value="LATEST-EAP-SNAPSHOT" />
      <param name="env.ORG_GRADLE_PROJECT_instrumentPluginCode" value="false" />
      <param name="env.ideavim.nvim.path" value="./nvim-linux64/bin/nvim" />
    </parameters>
    <build-runners>
      <runner id="RUNNER_1" name="Set up NeoVim" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[wget https://github.com/neovim/neovim/releases/download/v0.7.2/nvim-linux64.tar.gz
tar xzf nvim-linux64.tar.gz
cd nvim-linux64/bin
chmod +x nvim]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_2" name="" type="gradle-runner">
        <parameters>
          <param name="teamcity.coverage.emma.include.source" value="true" />
          <param name="teamcity.coverage.emma.instr.parameters" value="-ix -*Test*" />
          <param name="teamcity.coverage.idea.includePatterns" value="*" />
          <param name="teamcity.coverage.jacoco.patterns" value="+:*" />
          <param name="teamcity.step.mode" value="default" />
          <param name="teamcity.tool.jacoco" value="%teamcity.tool.jacoco.DEFAULT%" />
          <param name="ui.gradleRUnner.gradle.build.file" value="" />
          <param name="ui.gradleRunner.gradle.stacktrace.enabled" value="true" />
          <param name="ui.gradleRunner.gradle.tasks.names" value="clean testWithNeovim" />
          <param name="ui.gradleRunner.gradle.wrapper.useWrapper" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="Ideavim_HttpsGithubComJetBrainsIdeavimRefsHeadsMaster" />
    </vcs-settings>
    <requirements>
      <equals id="RQ_1" name="teamcity.agent.hardware.cpuCount" value="4" />
      <equals id="RQ_2" name="teamcity.agent.os.family" value="Linux" />
    </requirements>
    <build-triggers>
      <build-trigger id="TRIGGER_1" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:&lt;default&gt;" />
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <build-extensions>
      <extension id="BUILD_EXT_1" type="BuildFailureOnMetric">
        <parameters>
          <param name="anchorBuild" value="lastSuccessful" />
          <param name="metricKey" value="buildTestCount" />
          <param name="metricThreshold" value="20" />
          <param name="metricUnits" value="metricUnitsPercents" />
          <param name="moreOrLess" value="less" />
          <param name="withBuildAnchor" value="true" />
        </parameters>
      </extension>
    </build-extensions>
    <cleanup />
  </settings>
</build-type>

